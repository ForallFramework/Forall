{
  
  "name": "forall.forall",
  "description": "An Apache environment for the Forall Frameworks packages.",
  "type": "project",
  "license": "MIT",
  
  "authors": [
    {
      "name": "Aldwin 'Avaq' Vlasblom",
      "email": "aldwin.vlasblom@gmail.com",
      "role": "Developer"
    }
  ],
  
  "support": {
    "source": "https://github.com/ForallFramework/Forall",
    "issues": "https://github.com/ForallFramework/Forall/issues"
  },
  
  "require": {
    "forall/core": "*",
    "forall/loader": "*",
    "forall/events": "*"
  },
  
  "minimum-stability": "dev",
  
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/ForallFramework/core.package"
    },
    {
      "type": "vcs",
      "url": "https://github.com/ForallFramework/loader.package"
    },
    {
      "type": "vcs",
      "url": "https://github.com/ForallFramework/events.package"
    }
  ],
  
  "config": {
    "vendor-dir": "packages",
    "bin-dir": "bin"
  }
  
}
